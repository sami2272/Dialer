<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"

    android:layout_marginEnd="0dp"
    android:layout_marginStart="0dp">

    <ImageView
        android:id="@+id/img_label_block"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_block_contact"
        app:tint="?colorOnSecondary"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="12321321321"
        android:layout_marginStart="15dp"
        android:textColor="?colorOnSecondary"
        app:layout_constraintEnd_toStartOf="@+id/img_cross"
        app:layout_constraintTop_toTopOf="@+id/img_label_block"
        app:layout_constraintStart_toEndOf="@+id/img_label_block"
        app:layout_constraintBottom_toBottomOf="@+id/img_label_block"
        />

    <TextView
        android:id="@+id/tv_block_contant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        />

    <ImageView
        android:id="@+id/img_cross"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_clear_24"
        app:tint="?colorPrimaryVariant"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_label_block"
        app:layout_constraintBottom_toBottomOf="@+id/img_label_block"
        />
</androidx.constraintlayout.widget.ConstraintLayout>