<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_all_contacts"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/img_dail_phone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_dial_phone_grey"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_phone_number"
        />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+923117394747"
        android:textStyle="bold"
        android:textColor="?colorOnSecondary"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_dail_phone"
        />

    <TextView
        android:id="@+id/tv_call_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Primary Number"
        android:textColor="@color/Light_Grey_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_dail_phone"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_number"
        />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/Light_grey_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_call_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_call_details"
        />

</androidx.constraintlayout.widget.ConstraintLayout>